{
  "name": "@voice-chat/desktop-app",
  "version": "1.3.5",
  "description": "Electron desktop application for voice chat",
  "author": "Voice Chat Team",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mihai3001/voice-chat.git"
  },
  "type": "module",
  "scripts": {
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "esbuild src/preload.ts --bundle --outfile=dist/preload.cjs --platform=node --format=cjs --external:electron",
    "build:renderer": "esbuild src/renderer/app.ts --bundle --outfile=dist/renderer/app.js --platform=browser --format=iife --external:electron --define:global=window --define:process.env.NODE_ENV='\"production\"' --inject:./process-shim.js",
    "build": "pnpm build:main && pnpm build:preload && pnpm build:renderer",
    "dev": "pnpm build && pnpm exec electron .",
    "start": "pnpm exec electron .",
    "package": "pnpm build && pnpm exec electron-builder",
    "publish": "dotenv -e .env -- pnpm build && dotenv -e .env -- pnpm exec electron-builder --publish always"
  },
  "dependencies": {
    "@voice-chat/client-core": "workspace:*",
    "electron-updater": "^6.1.7",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.4",
    "electron": "^28.1.4",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.voicelink.app",
    "productName": "VoiceLink",
    "protocols": {
      "name": "VoiceLink Room",
      "schemes": [
        "voicelink"
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/index.html",
      "src/renderer/vendor/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "mihai3001",
      "repo": "voice-chat",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VoiceLink",
      "differentialPackage": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network"
    }
  }
}
